extends layout

block content
  p Tape: #{tape.conversationCode}
  p Start Date: #{tape.startDateTimeMoment}
  p End Date: #{tape.endDateTimeMoment}
  p Participants: #{tape.participants}
  p Recording Device: #{tape.recordingDevice}
  audio(controls)
    source(src=`https://nixon.nyc3.digitaloceanspaces.com/audio/${tape.conversationCode}.mp3` type="audio/mp3")
  p NARA Description:
  p #{tape.description}
  p Nixon Library Finding Aid:
  div(id="findingaid")
    pre !{tape.findingAid}
